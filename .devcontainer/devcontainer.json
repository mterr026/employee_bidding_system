// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",

	"container_name": "FastAPI",
	//sets Dockerfile locations
	"build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
	"runArgs": [
    "-e", "PGADMIN_DEFAULT_EMAIL=user@domain.com",
    "-e", "PGADMIN_DEFAULT_PASSWORD=SuperSecret",
    "-e", "PGADMIN_LISTEN_PORT=8080"
  ],
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	 "forwardPorts": [8000, 5432, 8080],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "pip install -r requirements.txt",
	//"postStartCommand": "/usr/local/bin/startup.sh && uvicorn src.main:app --host 0.0.0.0 --port 8000 --reload"
	"postStartCommand": "pip install -r requirements.txt" //#service postgresql start && /usr/local/bin/startup.sh && uvicorn src.main:app --host 0.0.0.0 --port 8000 --reload",


	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
